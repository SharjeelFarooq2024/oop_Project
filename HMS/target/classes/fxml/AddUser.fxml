<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.myapp.frontend.controllers.AddUserScreenController"
      alignment="CENTER"
      style="-fx-background-color: linear-gradient(to bottom right, #0f4c81, #38b6ff);"
      spacing="30"
      padding="40">
      
    <Label text="Add New User"
           style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />
    
    <VBox spacing="20" 
          alignment="CENTER"
          style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 8, 0, 0, 0);"
          minWidth="400"
          maxWidth="500"
          padding="30">
          
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Name:" style="-fx-font-size: 14px; -fx-min-width: 50;" />
            <TextField fx:id="nameField" promptText="Enter user's full name" prefWidth="250" />
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Role:" style="-fx-font-size: 14px; -fx-min-width: 50;" />
            <ComboBox fx:id="roleComboBox" prefWidth="250" />
        </HBox>
                  
        <Button fx:id="addUserButton" 
                text="Add User"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5;"
                prefWidth="200" />
                
        <Button fx:id="backButton" 
                text="Back to Dashboard"
                style="-fx-background-color: #e0e0e0; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5;"
                prefWidth="200" />
    </VBox>
</VBox>