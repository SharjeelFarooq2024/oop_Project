<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.myapp.frontend.controllers.UploadVitalsController">
    <top>
        <HBox spacing="10" style="-fx-background-color: #1a237e;">
            <padding><Insets top="15" right="20" bottom="15" left="20"/></padding>
            <Button fx:id="backButton" text="Back" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #f5f5f5; -fx-background-color: #f5f5f5;">
            <VBox spacing="25" style="-fx-background-color: white; -fx-background-radius: 10;">
                <padding>
                    <Insets top="30" right="40" bottom="40" left="40"/>
                </padding>
                
                <Text text="Upload Vital Signs" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1a237e;"/>
                
                <GridPane vgap="20" hgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>

                    <!-- Blood Pressure -->
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Blood Pressure" style="-fx-font-size: 14px;"/>
                        <HBox spacing="8">
                            <TextField fx:id="systolicField" promptText="Systolic" prefWidth="120" style="-fx-font-size: 14px;"/>
                            <Text text="/" style="-fx-font-size: 18px; -fx-fill: #424242;"/>
                            <TextField fx:id="diastolicField" promptText="Diastolic" prefWidth="120" style="-fx-font-size: 14px;"/>
                        </HBox>
                    </VBox>

                    <!-- Heart Rate -->
                    <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Heart Rate (bpm)" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="heartRateField" promptText="Enter heart rate" style="-fx-font-size: 14px;"/>
                    </VBox>

                    <!-- Temperature -->
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Temperature (Â°F)" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="temperatureField" promptText="Enter temperature" style="-fx-font-size: 14px;"/>
                    </VBox>

                    <!-- Oxygen Saturation -->
                    <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="Oxygen Saturation (%)" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="oxygenField" promptText="Enter oxygen level" style="-fx-font-size: 14px;"/>
                    </VBox>

                    <!-- Respiratory Rate -->
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <Label text="Respiratory Rate (breaths/min)" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="respiratoryField" promptText="Enter respiratory rate" style="-fx-font-size: 14px;"/>
                    </VBox>

                    <!-- Weight -->
                    <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <Label text="Weight (kg)" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="weightField" promptText="Enter weight" style="-fx-font-size: 14px;"/>
                    </VBox>
                </GridPane>

                <VBox spacing="8">
                    <Label text="Additional Notes" style="-fx-font-size: 14px;"/>
                    <TextArea fx:id="notesField" promptText="Enter any additional notes or observations" 
                             prefRowCount="3" wrapText="true" style="-fx-font-size: 14px;"/>
                </VBox>

                <!-- Upload Section -->
                <VBox spacing="10">
                    <Label text="Upload Documents" style="-fx-font-size: 14px;"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="uploadButton" text="Choose Files" 
                                style="-fx-background-color: #e0e0e0; -fx-text-fill: #424242; -fx-font-size: 14px; -fx-padding: 8 15; -fx-background-radius: 5;"/>
                        <Label fx:id="fileNameLabel" text="No file chosen" style="-fx-font-size: 14px; -fx-text-fill: #757575;"/>
                    </HBox>
                </VBox>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="clearVitalsButton" text="Clear" 
                            style="-fx-background-color: #e0e0e0; -fx-text-fill: #424242; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                    <Button fx:id="submitVitalsButton" text="Submit" 
                            style="-fx-background-color: #1a237e; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>