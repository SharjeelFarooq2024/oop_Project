<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.myapp.frontend.controllers.PatientDetailsController"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <HBox style="-fx-background-color: #1a237e; -fx-padding: 15 20;">
            <Label text="Patient Details" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="backButton" text="Back" 
                   style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Patient Info Card -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="Patient Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <GridPane vgap="10" hgap="20" style="-fx-padding: 10 0 0 0;">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100"/>
                        <ColumnConstraints/>
                    </columnConstraints>
                    
                    <Label text="Name:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="patientNameLabel" text="John Doe" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <Label text="ID:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="patientIdLabel" text="12345" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    
                    <Label text="Email:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="patientEmailLabel" text="john@example.com" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>
            
            <!-- Previous Feedback -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="Previous Feedback" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <ListView fx:id="previousFeedbackListView" prefHeight="150"/>
            </VBox>
            
            <!-- Add Feedback -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="Add Feedback" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <Label text="Feedback Comments" style="-fx-font-size: 14px;"/>
                    <TextArea fx:id="feedbackTextArea" prefHeight="100" wrapText="true"
                              promptText="Enter your medical feedback for the patient..."/>
                              
                    <Label text="Prescribed Medication" style="-fx-font-size: 14px;"/>
                    <TextField fx:id="medicationField" promptText="Enter any medication prescribed"/>
                    
                    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                        <Button fx:id="submitFeedbackButton" text="Submit Feedback"
                                style="-fx-background-color: #1a237e; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>